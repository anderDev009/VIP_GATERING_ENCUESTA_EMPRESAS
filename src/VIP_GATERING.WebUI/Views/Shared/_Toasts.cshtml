@{
    var success = TempData["Success"] as string;
    var info = TempData["Info"] as string;
    var error = TempData["Error"] as string;
}
<div id="toast-root" class="toast-root fixed top-4 right-4 z-50 space-y-2">
    @if (!string.IsNullOrWhiteSpace(success))
    {
        <div class="toast-item toast-item--success px-4 py-3 rounded shadow bg-emerald-600 text-white" data-toast>
            @success
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(info))
    {
        <div class="toast-item toast-item--info px-4 py-3 rounded shadow bg-sky-600 text-white" data-toast>
            @info
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="toast-item toast-item--error px-4 py-3 rounded shadow bg-red-600 text-white" data-toast>
            @error
        </div>
    }
</div>
<script src="~/js/toasts.js" defer></script>
