@model VIP_GATERING.WebUI.Models.Account.LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="login-card">
    <div class="login-header">
        <div>
            <div class="login-kicker">Acceso seguro</div>
            <div class="login-title">Iniciar sesion</div>
            <div class="login-subtitle">Usa tu usuario y contrasena.</div>
        </div>
        <span class="login-badge">HTTPS activo</span>
    </div>
    <form asp-action="Login" method="post" class="space-y-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl" />
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-2"></div>
        <div class="login-field">
            <label asp-for="UserName" class="login-label">Usuario</label>
            <input asp-for="UserName" type="text" class="login-input" autocomplete="username" placeholder="codigo" />
            <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
        </div>
        <div class="login-field">
            <label asp-for="Password" class="login-label">Contrasena</label>
            <div class="login-password">
                <input asp-for="Password" type="password" class="login-input login-input--password" autocomplete="current-password" placeholder="********************" />
                <button type="button" data-toggle-password class="login-toggle">Mostrar</button>
            </div>
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>
        <div class="login-note">Contrasena minima: 6 caracteres.</div>
        <button class="btn-primary login-submit">Entrar</button>
    </form>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js" defer></script>
}
