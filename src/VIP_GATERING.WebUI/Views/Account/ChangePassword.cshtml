@model VIP_GATERING.WebUI.Models.Account.ChangePasswordVM
@{
    ViewData["Title"] = "Cambiar contraseña";
}
<div class="max-w-md mx-auto card">
    <h1 class="text-xl font-semibold mb-4">Cambiar contraseña</h1>
    <form asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="mb-3">
            <label asp-for="CurrentPassword" class="block text-sm"></label>
            <input asp-for="CurrentPassword" class="border rounded w-full p-2" autocomplete="current-password" />
            <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPassword" class="block text-sm"></label>
            <input asp-for="NewPassword" class="border rounded w-full p-2" autocomplete="new-password" />
            <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="block text-sm"></label>
            <input asp-for="ConfirmPassword" class="border rounded w-full p-2" autocomplete="new-password" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>
        <button class="btn-primary">Guardar</button>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
