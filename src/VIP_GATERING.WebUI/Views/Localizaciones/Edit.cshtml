@model VIP_GATERING.Domain.Entities.Localizacion
@{
    ViewData["Title"] = "Editar localizacion";
    var empresas = (IEnumerable<VIP_GATERING.Domain.Entities.Empresa>)ViewBag.Empresas;
}
<h1 class="text-2xl font-semibold mb-4 max-w-lg mx-auto">Editar localizacion</h1>

<form asp-action="Edit" method="post" class="space-y-4 card max-w-lg mx-auto">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="text-red-700 text-sm">@Html.ValidationSummary()</div>
    <div>
        <label class="block text-sm">Nombre</label>
        <input asp-for="Nombre" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Empresa</label>
        <select asp-for="EmpresaId" class="w-full border rounded p-2">
            <option value="">Seleccione una empresa</option>
            @foreach (var e in empresas)
            {
                if (Model.EmpresaId == e.Id)
                {
                    <option selected value="@e.Id">@e.Nombre</option>
                }
                else
                {
                    <option value="@e.Id">@e.Nombre</option>
                }
            }
        </select>
        <span asp-validation-for="EmpresaId" class="text-rose-600 text-xs"></span>
    </div>
    <div>
        <label class="block text-sm">RNC</label>
        <input asp-for="Rnc" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Direccion</label>
        <textarea asp-for="Direccion" rows="3" class="w-full border rounded p-2"></textarea>
        <span asp-validation-for="Direccion" class="text-rose-600 text-xs"></span>
    </div>
    <div>
        <label class="block text-sm">Notas de entrega</label>
        <textarea asp-for="IndicacionesEntrega" rows="3" class="w-full border rounded p-2"></textarea>
        <span asp-validation-for="IndicacionesEntrega" class="text-rose-600 text-xs"></span>
    </div>
    <div class="flex gap-2">
        <button class="btn-primary">Guardar</button>
        <a asp-action="Index" class="btn-outline">Cancelar</a>
    </div>

</form>

