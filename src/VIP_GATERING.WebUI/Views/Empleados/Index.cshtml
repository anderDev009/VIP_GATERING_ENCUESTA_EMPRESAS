@model VIP_GATERING.WebUI.Models.PagedResult<VIP_GATERING.Domain.Entities.Empleado>
@{
    var empUserIds = (IEnumerable<System.Guid>)(ViewBag.EmpleadoUsuarioIds ?? new List<System.Guid>());
}
@{
    ViewData["Title"] = "Empleados";
    var empresas = (IEnumerable<VIP_GATERING.Domain.Entities.Empresa>)ViewBag.Empresas;
    var sucursales = (IEnumerable<VIP_GATERING.Domain.Entities.Sucursal>)ViewBag.Sucursales;
    Guid? empresaSel = ViewBag.EmpresaId as Guid?;
    Guid? sucursalSel = ViewBag.SucursalId as Guid?;
    string? q = ViewBag.Q as string;
}
<div class="flex justify-between items-center mb-4">
    <div>
        <h1 class="text-2xl font-semibold">Empleados</h1>
        <p class="text-sm text-slate-500">Administra Empresas, Filiales y accesos desde un solo panel.</p>
    </div>
    <a asp-action="Create" class="btn-primary">Nuevo empleado</a>
</div>

<form method="get" class="mb-6 grid md:grid-cols-4 gap-4 items-end max-w-4xl">
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Empresa</label>
        <select name="empresaId" class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-100">
            <option value="">-- Todos --</option>
            @foreach (var e in empresas)
            {
                if (empresaSel == e.Id) {<option selected value="@e.Id">@e.Nombre</option>} else {<option value="@e.Id">@e.Nombre</option>}
            }
        </select>
    </div>
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Filial</label>
        <select name="sucursalId" class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-100">
            <option value="">-- Todas --</option>
            @foreach (var s in sucursales)
            {
                if (sucursalSel == s.Id) {<option selected value="@s.Id">@s.Nombre</option>} else {<option value="@s.Id">@s.Nombre</option>}
            }
        </select>
    </div>
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Buscar</label>
        <input type="text" name="q" value="@q" class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-teal-100" />
    </div>
    <div class="flex md:justify-end">
        <button class="btn-outline w-full md:w-auto">Filtrar</button>
    </div>
</form>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border rounded">
        <thead class="bg-slate-100 text-xs uppercase tracking-[0.25em] text-slate-500">
            <tr>
                <th class="text-left px-6 py-4">Codigo</th>
                <th class="text-left px-6">Nombre</th>
                <th class="text-left px-6">Filial</th>
                <th class="text-left px-6">Empresa</th>
                <th class="text-left px-6">Subsidiado</th>
                <th class="px-6 text-right">Acciones</th>
            </tr>
        </thead>
        <tbody class="text-sm">
        @foreach (var e in Model.Items)
        {
            <tr class="border-t">
                <td class="p-2 text-slate-700">@e.Codigo</td>
                <td class="p-2">
                    <div class="font-semibold text-slate-900">@e.Nombre</div>
                </td>
                <td class="p-2 text-slate-600">@e.Sucursal?.Nombre</td>
                <td class="p-2 text-slate-600">@e.Sucursal?.Empresa?.Nombre</td>
                <td class="p-2">
                    @if (e.EsSubsidiado)
                    {
                        <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-600">Si</span>
                    }
                    else
                    {
                        <span class="inline-flex items-center rounded-full bg-amber-50 px-3 py-1 text-xs font-semibold text-amber-600">No</span>
                    }
                </td>
                <td class="p-2 text-right">
                    <div class="flex flex-wrap justify-end gap-2">
                        <a asp-action="Edit" asp-route-id="@e.Id" class="btn-outline">Editar</a>
                        <form asp-action="Delete" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@e.Id" />
                            <button class="btn-outline text-rose-500 border-rose-100 hover:border-rose-300">Desactivar</button>
                        </form>
                        <a asp-action="Semana" asp-route-id="@e.Id" class="btn-outline">Ver semana</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Empresa"))
                        {
                            if (!empUserIds.Contains(e.Id))
                            {
                                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Sin usuario</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-600">Usuario</span>
                            }
}
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_Pagination", new VIP_GATERING.WebUI.Models.PagedResult<object>{ Items = Model.Items.Cast<object>().ToList(), Page=Model.Page, PageSize=Model.PageSize, TotalItems=Model.TotalItems })
