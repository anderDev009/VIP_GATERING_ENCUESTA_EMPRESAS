@model VIP_GATERING.WebUI.Models.PagedResult<VIP_GATERING.Domain.Entities.Empleado>
@{
    var empUserIds = (IEnumerable<int>)(ViewBag.EmpleadoUsuarioIds ?? new List<int>());
    ViewData["Title"] = "Empleados";
    var empresas = (IEnumerable<VIP_GATERING.Domain.Entities.Empresa>)ViewBag.Empresas;
    var sucursales = (IEnumerable<VIP_GATERING.Domain.Entities.Sucursal>)ViewBag.Sucursales;
    var localizaciones = (IEnumerable<VIP_GATERING.Domain.Entities.Localizacion>)(ViewBag.Localizaciones ?? new List<VIP_GATERING.Domain.Entities.Localizacion>());
    int? empresaSel = ViewBag.EmpresaId as int?;
    int? sucursalSel = ViewBag.SucursalId as int?;
    int? localizacionSel = ViewBag.LocalizacionId as int?;
    string? q = ViewBag.Q as string;
    var verDeshabilitados = (bool?)ViewBag.VerDeshabilitados ?? false;
}
<div class="flex justify-between items-center mb-4">
    <div>
        <h1 class="text-2xl font-semibold">Empleados</h1>
        <p class="text-sm text-slate-500">Administra Empresas, Filiales y accesos desde un solo panel.</p>
    </div>
    <a asp-action="Create" class="btn-primary">Nuevo empleado</a>
</div>

<div class="tab-switch tab-switch--panel mb-4">
    <div class="tab-switch__label">Estado</div>
    <div class="tab-switch__group">
        <a class="tab-pill @(verDeshabilitados ? "" : "is-active text-white hover:text-white")" asp-action="Index" asp-route-empresaId="@empresaSel" asp-route-sucursalId="@sucursalSel" asp-route-localizacionId="@localizacionSel" asp-route-q="@q" asp-route-verDeshabilitados="false">Activos</a>
        <a class="tab-pill @(verDeshabilitados ? "is-active text-white hover:text-white" : "")" asp-action="Index" asp-route-empresaId="@empresaSel" asp-route-sucursalId="@sucursalSel" asp-route-localizacionId="@localizacionSel" asp-route-q="@q" asp-route-verDeshabilitados="true">Deshabilitados</a>
    </div>
</div>

<form method="get" class="mb-6 grid md:grid-cols-5 gap-4 items-end max-w-5xl">
    <input type="hidden" name="verDeshabilitados" value="@(verDeshabilitados ? "true" : "false")" />
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Empresa</label>
        <select id="filterEmpresa" name="empresaId" class="js-empleado-filter mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-100">
            <option value="">-- Todos --</option>
            @foreach (var e in empresas)
            {
                if (empresaSel == e.Id) {<option selected value="@e.Id">@e.Nombre</option>} else {<option value="@e.Id">@e.Nombre</option>}
            }
        </select>
    </div>
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Filial</label>
        <select id="filterSucursal" name="sucursalId" class="js-empleado-filter mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-100">
            <option value="">-- Todas --</option>
            @foreach (var s in sucursales)
            {
                if (sucursalSel == s.Id) {<option selected value="@s.Id" data-empresa="@s.EmpresaId">@s.Nombre</option>} else {<option value="@s.Id" data-empresa="@s.EmpresaId">@s.Nombre</option>}
            }
        </select>
    </div>
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Localizacion</label>
        <select id="filterLocalizacion" name="localizacionId" class="js-empleado-filter mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-100">
            <option value="">-- Todas --</option>
            @foreach (var l in localizaciones)
            {
                if (localizacionSel == l.Id) {<option selected value="@l.Id" data-empresa="@l.EmpresaId" data-sucursal="@l.SucursalId">@l.Nombre</option>} else {<option value="@l.Id" data-empresa="@l.EmpresaId" data-sucursal="@l.SucursalId">@l.Nombre</option>}
            }
        </select>
    </div>
    <div>
        <label class="text-xs uppercase tracking-widest text-slate-400">Buscar</label>
        <input type="text" name="q" value="@q" class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-teal-100" />
    </div>
    <div class="flex md:justify-end">
        <button class="btn-outline w-full md:w-auto">Filtrar</button>
    </div>
</form>
<div class="flex gap-2 mb-4">
    <a class="btn-outline" asp-action="ExportExcel" asp-route-empresaId="@empresaSel" asp-route-sucursalId="@sucursalSel" asp-route-localizacionId="@localizacionSel" asp-route-q="@q" asp-route-verDeshabilitados="@verDeshabilitados">Exportar Excel</a>
</div>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border rounded">
        <thead class="bg-slate-100 text-xs uppercase tracking-[0.25em] text-slate-500">
            <tr>
                <th class="text-left px-6 py-4">Codigo</th>
                <th class="text-left px-6">Nombre</th>
                <th class="text-left px-6">Filial</th>
                <th class="text-left px-6">Empresa</th>
                <th class="text-left px-6">Localizacion</th>
                <th class="text-left px-6">Subsidiado</th>
                <th class="text-left px-6">Subsidio</th>
                <th class="px-6 text-right">Acciones</th>
            </tr>
        </thead>
        <tbody class="text-sm">
        @foreach (var e in Model.Items)
        {
            var displayName = !string.IsNullOrWhiteSpace(e.Nombre)
                ? e.Nombre
                : (!string.IsNullOrWhiteSpace(e.Codigo) ? e.Codigo : "Sin nombre");
            <tr class="border-t">
                <td class="p-2 text-slate-700">@e.Codigo</td>
                <td class="p-2">
                    <div class="font-semibold text-slate-900">@displayName</div>
                </td>
                <td class="p-2 text-slate-600">@e.Sucursal?.Nombre</td>
                <td class="p-2 text-slate-600">@e.Sucursal?.Empresa?.Nombre</td>
                <td class="p-2 text-slate-600">
                    @{
                        var locs = e.LocalizacionesAsignadas
                            .Select(l => l.Localizacion?.Nombre)
                            .Where(n => !string.IsNullOrWhiteSpace(n))
                            .Distinct()
                            .ToList();
                    }
                    @(locs.Count > 0 ? string.Join(", ", locs) : "Sin asignar")
                </td>
                <td class="p-2">
                    @if (e.EsSubsidiado)
                    {
                        <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-600">Si</span>
                    }
                    else
                    {
                        <span class="inline-flex items-center rounded-full bg-amber-50 px-3 py-1 text-xs font-semibold text-amber-600">No</span>
                    }
                </td>
                <td class="p-2 text-slate-600">
                    @{
                        var tipoSubsidio = e.SubsidioTipo
                            ?? e.Sucursal?.SubsidioTipo
                            ?? e.Sucursal?.Empresa?.SubsidioTipo
                            ?? VIP_GATERING.Domain.Entities.SubsidioTipo.Porcentaje;
                        var valorSubsidio = e.SubsidioValor
                            ?? e.Sucursal?.SubsidioValor
                            ?? e.Sucursal?.Empresa?.SubsidioValor
                            ?? 0m;
                        var tipoLabel = tipoSubsidio == VIP_GATERING.Domain.Entities.SubsidioTipo.MontoFijo ? "RD$" : "%";
                    }
                    @(e.EsSubsidiado ? $"{valorSubsidio:0.##} {tipoLabel}" : "N/A")
                </td>
                <td class="p-2 text-right">
                    <div class="flex flex-wrap justify-end gap-2">
                        <a asp-action="Edit" asp-route-id="@e.Id" class="btn-outline">Editar</a>
                        @if (!verDeshabilitados)
                        {
                            <form asp-action="Delete" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@e.Id" />
                                <input type="hidden" name="empresaId" value="@empresaSel" />
                                <input type="hidden" name="sucursalId" value="@sucursalSel" />
                                <input type="hidden" name="localizacionId" value="@localizacionSel" />
                                <input type="hidden" name="q" value="@q" />
                                <input type="hidden" name="page" value="@Model.Page" />
                                <button class="btn-outline text-rose-500 border-rose-100 hover:border-rose-300">Desactivar</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Restore" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@e.Id" />
                                <input type="hidden" name="empresaId" value="@empresaSel" />
                                <input type="hidden" name="sucursalId" value="@sucursalSel" />
                                <input type="hidden" name="localizacionId" value="@localizacionSel" />
                                <input type="hidden" name="q" value="@q" />
                                <input type="hidden" name="page" value="@Model.Page" />
                                <button class="btn-outline text-emerald-600 border-emerald-100 hover:border-emerald-300">Re-habilitar</button>
                            </form>
                        }
                        <a asp-action="Semana" asp-route-id="@e.Id" class="btn-outline">Ver semana</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("RRHH"))
                        {
                            if (!empUserIds.Contains(e.Id))
                            {
                                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Sin usuario</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-600">Usuario</span>
                            }
                        }
                    </div>
                </td>
            </tr>
        }
        @if (!Model.Items.Any())
        {
            <tr class="border-t">
                <td colspan="8" class="px-6 py-8 text-center text-slate-500">
                    @(verDeshabilitados ? "No hay empleados deshabilitados para los filtros actuales." : "No hay empleados activos para los filtros actuales.")
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_Pagination", new VIP_GATERING.WebUI.Models.PagedResult<object>{ Items = Model.Items.Cast<object>().ToList(), Page=Model.Page, PageSize=Model.PageSize, TotalItems=Model.TotalItems })

@section Styles {
    <link rel="stylesheet" href="~/vendor/tom-select/tom-select.css" />
}

@section Scripts {
    <script src="~/vendor/tom-select/tom-select.complete.min.js" defer></script>
    <script src="~/js/empleados-index.js" defer></script>
}
