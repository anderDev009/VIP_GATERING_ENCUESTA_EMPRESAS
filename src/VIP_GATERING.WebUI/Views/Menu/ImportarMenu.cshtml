@model VIP_GATERING.WebUI.Models.MenuSemanalImportVM
@{
    ViewData["Title"] = "Importar menu";
}

<h1 class="text-2xl font-semibold mb-1">Importar menu semanal</h1>
<div class="text-sm text-slate-600 mb-4">
    Semana @Model.Inicio.ToString("yyyy-MM-dd") a @Model.Fin.ToString("yyyy-MM-dd")
</div>

<div class="page-panel mb-4">
    <div class="flex flex-wrap items-center gap-3">
        <a class="btn-outline" href="@Url.Action("Administrar", new { fecha = Model.Inicio.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd"), empresaId = Model.EmpresaId, sucursalId = Model.SucursalId })">Volver a menu</a>
        <a class="btn-outline" href="@Url.Action("PlantillaMenuExcel")">Descargar plantilla Excel</a>
    </div>
</div>

<form asp-action="ImportarMenu" method="post" enctype="multipart/form-data" class="page-panel space-y-3">
    @Html.AntiForgeryToken()
    <div class="text-red-700">@Html.ValidationSummary()</div>
    <input type="hidden" asp-for="Inicio" />
    <input type="hidden" asp-for="Fin" />
    <input type="hidden" asp-for="EmpresaId" />
    <input type="hidden" asp-for="SucursalId" />

    <div>
        <label class="block text-sm text-slate-600">Archivo Excel</label>
        <input type="file" name="Archivo" accept=".xlsx" class="border rounded p-2 w-full" />
        <div class="text-xs text-slate-500 mt-1">Usa la plantilla y respeta los nombres de columnas.</div>
    </div>

    <div class="flex items-center gap-3">
        <button type="submit" class="btn-primary">Importar menu</button>
    </div>
</form>

@if (Model.Errores?.Count > 0)
{
    <div class="page-panel mt-4">
        <div class="text-red-700 font-semibold mb-2">Errores</div>
        <ul class="text-sm text-red-700 list-disc pl-5">
            @foreach (var err in Model.Errores)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

@if (Model.Advertencias?.Count > 0)
{
    <div class="page-panel mt-4">
        <div class="text-amber-700 font-semibold mb-2">Advertencias</div>
        <ul class="text-sm text-amber-700 list-disc pl-5">
            @foreach (var adv in Model.Advertencias)
            {
                <li>@adv</li>
            }
        </ul>
    </div>
}
