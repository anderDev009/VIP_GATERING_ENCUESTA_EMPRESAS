@model VIP_GATERING.WebUI.Models.MenuPreviewVM
@{
    ViewData["Title"] = "Vista previa del menu";
    var empresa = string.IsNullOrWhiteSpace(Model.EmpresaNombre) ? "Empresa" : Model.EmpresaNombre;
    var filial = string.IsNullOrWhiteSpace(Model.FilialNombre) ? "Filial" : Model.FilialNombre;
    var letras = new[] { "A", "B", "C", "D", "E" };
    var backUrl = Url.Action("Administrar", "Menu", new
    {
        fecha = Model.FechaInicio.ToString("yyyy-MM-dd"),
        empresaId = Model.EmpresaId,
        sucursalId = Model.SucursalId
    });
    var tabs = Model.Dias
        .Where(d => !string.IsNullOrWhiteSpace(d.HorarioNombre))
        .GroupBy(d => d.HorarioNombre!)
        .OrderBy(g => g.Min(x => x.HorarioOrden))
        .Select(g => g.Key)
        .ToList();
}

<section class="page-panel space-y-3 mb-4">
    <div class="meta-row">
        <span class="meta-pill meta-pill--accent">Vista previa</span>
        <span class="meta-pill">Empresa: @empresa</span>
        @if (!string.IsNullOrWhiteSpace(Model.FilialNombre))
        {
            <span class="meta-pill meta-pill--ghost">Filial: @filial</span>
        }
        <span class="meta-pill">Origen: @Model.OrigenScope</span>
        <span class="meta-pill meta-pill--accent">
            Semana @Model.FechaInicio.ToString("yyyy-MM-dd") a @Model.FechaTermino.ToString("yyyy-MM-dd")
        </span>
    </div>
    @if (!string.IsNullOrWhiteSpace(backUrl))
    {
        <div class="flex flex-wrap gap-2">
            <a class="btn-outline" href="@backUrl">Volver</a>
            <a class="btn-outline" asp-action="ExportMenuExcel" asp-route-inicio="@Model.FechaInicio.ToString("yyyy-MM-dd")" asp-route-fin="@Model.FechaTermino.ToString("yyyy-MM-dd")" asp-route-empresaId="@Model.EmpresaId" asp-route-sucursalId="@Model.SucursalId">Exportar Excel</a>
            <a class="btn-outline" asp-action="ExportMenuCsv" asp-route-inicio="@Model.FechaInicio.ToString("yyyy-MM-dd")" asp-route-fin="@Model.FechaTermino.ToString("yyyy-MM-dd")" asp-route-empresaId="@Model.EmpresaId" asp-route-sucursalId="@Model.SucursalId">Exportar CSV</a>
            <a class="btn-outline" asp-action="ExportMenuPdf" asp-route-inicio="@Model.FechaInicio.ToString("yyyy-MM-dd")" asp-route-fin="@Model.FechaTermino.ToString("yyyy-MM-dd")" asp-route-empresaId="@Model.EmpresaId" asp-route-sucursalId="@Model.SucursalId">Exportar PDF</a>
        </div>
    }
    <div class="panel-subtitle">Esta vista muestra como se vera el menu para los empleados.</div>
</section>

@if (Model.Dias == null || Model.Dias.Count == 0)
{
    <div class="page-panel">
        <div class="empty-state">No hay platos configurados para este rango.</div>
    </div>
}
else
{
    <div class="tab-switch mb-4">
        <div class="tab-switch__label">Tandas</div>
        <div class="tab-switch__group" id="tabs-preview">
            @for (var i = 0; i < tabs.Count; i++)
            {
                var tabId = $"tab-preview-{i}";
                <button type="button" class="tab-pill" data-tab-target="@tabId">@tabs[i]</button>
            }
        </div>
    </div>

    @for (var i = 0; i < tabs.Count; i++)
    {
        var tabId = $"tab-preview-{i}";
        var items = Model.Dias.Where(d => string.Equals(d.HorarioNombre, tabs[i], StringComparison.OrdinalIgnoreCase)).ToList();
        var maxOpciones = items.Count == 0 ? 3 : items.Max(x => x.OpcionesMaximas <= 0 ? 3 : x.OpcionesMaximas);
        <div id="@tabId" class="tab-panel @(i == 0 ? "is-active" : "") space-y-3" data-tab-panel>
            <div class="overflow-x-auto">
                <table class="menu-table">
                    <thead>
                        <tr>
                            <th>Dia</th>
                            @for (var c = 0; c < maxOpciones; c++)
                            {
                                <th>Plato @letras[c]</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in items)
                        {
                            <tr>
                                <td class="menu-daycell">
                                    <div class="menu-day-title">
                                        <span>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetDayName(d.DiaSemana)</span>
                                        <span class="menu-day-meta">
                                            <span class="icon-dot icon-dot--teal"></span>
                                            @d.HorarioNombre
                                        </span>
                                    </div>
                                </td>
                                @for (var c = 0; c < maxOpciones; c++)
                                {
                                    string? nombre = c switch
                                    {
                                        0 => d.A,
                                        1 => d.B,
                                        2 => d.C,
                                        3 => d.D,
                                        4 => d.E,
                                        _ => null
                                    };
                                    <td class="menu-option-cell">
                                        @if (string.IsNullOrWhiteSpace(nombre))
                                        {
                                            <div class="menu-option-empty">Sin definir</div>
                                        }
                                        else
                                        {
                                            <div class="option-card__title">@nombre</div>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

@section Scripts {
    <script src="~/js/menu-vista-previa.js" defer></script>
}
