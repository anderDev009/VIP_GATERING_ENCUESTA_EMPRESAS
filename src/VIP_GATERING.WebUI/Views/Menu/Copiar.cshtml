@model (VIP_GATERING.Domain.Entities.Empresa empresa, DateOnly inicio, DateOnly fin, List<(System.Guid id, string nombre)> sucursales)
@{
    ViewData["Title"] = "Copiar menú a dependientes";
}
<h1 class="text-2xl font-semibold mb-4">Copiar menú a dependientes</h1>
<div class="mb-3 text-slate-600">Cliente: <strong>@Model.empresa.Nombre</strong> — Semana: @Model.inicio.ToString("yyyy-MM-dd") a @Model.fin.ToString("yyyy-MM-dd")</div>

<form asp-action="Copiar" method="post" class="space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" name="empresaId" value="@Model.empresa.Id" />
    <input type="hidden" name="inicio" value="@Model.inicio.ToString("yyyy-MM-dd")" />
    <input type="hidden" name="fin" value="@Model.fin.ToString("yyyy-MM-dd")" />

    <div>
        <label class="block text-sm text-slate-600 mb-2">Dependientes destino</label>
        <label class="inline-flex items-center gap-2 mb-2">
            <input type="checkbox" id="chk-all" onchange="toggleAll(this)" />
            <span>Seleccionar todo</span>
        </label>
        <div class="grid md:grid-cols-2 gap-2">
            @for (var i = 0; i < Model.sucursales.Count; i++)
            {
                var s = Model.sucursales[i];
                <label class="p-3 border rounded bg-white flex items-center gap-2">
                    <input type="checkbox" name="sucursalIds" value="@s.id" class="chk-item" />
                    <span>@s.nombre</span>
                </label>
            }
        </div>
    </div>

    <div>
        <button class="px-4 py-2 bg-indigo-600 text-white rounded">Copiar desde menú del cliente</button>
        <a asp-action="Clientes" class="px-3 py-2 border rounded">Volver</a>
    </div>
</form>

<script>
    function toggleAll(src){
        document.querySelectorAll('.chk-item').forEach(c=>c.checked = src.checked);
    }
</script>
