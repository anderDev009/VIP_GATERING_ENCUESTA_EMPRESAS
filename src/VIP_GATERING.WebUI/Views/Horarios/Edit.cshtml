@model VIP_GATERING.Domain.Entities.Horario
@{
    ViewData["Title"] = "Editar horario";
}
<h1 class="text-2xl font-semibold mb-4 max-w-lg mx-auto">Editar horario</h1>

<form asp-action="Edit" method="post" class="space-y-4 card max-w-lg mx-auto">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="block text-sm">Nombre</label>
        <input asp-for="Nombre" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Orden</label>
        <input asp-for="Orden" type="number" class="w-full border rounded p-2" />
    </div>
    <div class="flex items-center gap-2">
        <input asp-for="Activo" type="checkbox" />
        <label>Activo</label>
    </div>
    <div class="flex gap-2">
        <button class="btn-primary">Guardar</button>
        <a asp-action="Index" class="btn-outline">Cancelar</a>
    </div>
 </form>

