@model VIP_GATERING.Domain.Entities.Opcion
@{
    ViewData["Title"] = "Editar plato";
    var horarios = ViewBag.Horarios as List<VIP_GATERING.Domain.Entities.Horario> ?? new();
    var seleccionados = ViewBag.HorarioIds as List<Guid> ?? new();
    var esAdicional = (bool?)(ViewBag.EsAdicional) ?? false;
    var tipoEtiqueta = esAdicional ? "Adicional (100% empleado)" : "Plato principal";
}
<h1 class="text-2xl font-semibold mb-4 max-w-lg mx-auto">Editar plato</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="space-y-4 bg-white p-4 border rounded max-w-lg mx-auto">
    <input type="hidden" asp-for="Id" />
    <div class="text-sm text-slate-600 flex items-center gap-2">
        <span class="font-semibold">Tipo:</span>
        <span class="px-2 py-0.5 rounded border text-xs uppercase tracking-wide">@tipoEtiqueta</span>
    </div>
    <div>
        <label class="block text-sm">C&oacute;digo</label>
        <input asp-for="Codigo" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Nombre</label>
        <input asp-for="Nombre" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Descripci&oacute;n</label>
        <textarea asp-for="Descripcion" rows="2" class="w-full border rounded p-2"></textarea>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm">Costo</label>
            <input asp-for="Costo" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block text-sm">Precio</label>
            <input asp-for="Precio" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
    </div>
    <div>
        <label class="block text-sm">Categor&iacute;as (tandas)</label>
        <select id="horarios-select" name="HorarioIds" multiple class="w-full border rounded p-2">
            @if (!horarios.Any())
            {
                <option value="">Sin tandas disponibles</option>
            }
            else
            {
                foreach (var h in horarios)
                {
                    if (seleccionados.Contains(h.Id))
                    {
                        <option value="@h.Id" selected>@h.Nombre</option>
                    }
                    else
                    {
                        <option value="@h.Id">@h.Nombre</option>
                    }
                }
            }
        </select>
        <div class="text-xs text-slate-500 mt-1">Tip: escribe para filtrar y usa Enter para elegir multiples.</div>
    </div>
    <div class="flex items-center gap-2">
        <input asp-for="LlevaItbis" type="checkbox" class="border rounded" id="chk-itbis" />
        <label for="chk-itbis">Lleva ITBIS</label>
    </div>
    <div>
        <label class="block text-sm">Imagen</label>
        @if (!string.IsNullOrWhiteSpace(Model.ImagenUrl))
        {
            <div class="mb-2">
                <img src="@Model.ImagenUrl" alt="Vista previa de @Model.Nombre" class="w-32 h-32 object-cover rounded border" />
                <label class="flex items-center gap-2 text-sm text-slate-600 mt-2">
                    <input type="checkbox" name="eliminarImagen" value="true" class="border rounded" />
                    Eliminar imagen actual
                </label>
            </div>
        }
        <input type="file" name="imagen" accept="image/*" class="w-full border rounded p-2" />
        <div class="text-xs text-slate-500 mt-1">Formatos: JPG, PNG, GIF o WEBP. M&aacute;ximo 2&nbsp;MB.</div>
        <span class="text-red-600 text-sm">@Html.ValidationMessage("Imagen")</span>
    </div>
    <div class="flex gap-2">
        <button class="px-3 py-2 bg-emerald-600 text-white rounded">Guardar</button>
        <a asp-action="Index" class="px-3 py-2 border rounded">Cancelar</a>
    </div>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.css" />
<script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
<script>
    (() => {
        const sel = document.getElementById('horarios-select');
        if (sel && typeof TomSelect !== 'undefined') {
            new TomSelect(sel, {
                plugins: ['remove_button'],
                maxItems: null,
                persist: false,
                create: false,
                placeholder: 'Selecciona categorias...'
            });
        }
    })();
</script>
