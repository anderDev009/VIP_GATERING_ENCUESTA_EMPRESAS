@model VIP_GATERING.Domain.Entities.Opcion
@{
    ViewData["Title"] = "Editar opci&oacute;n";
}
<h1 class="text-2xl font-semibold mb-4">Editar opci&oacute;n</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="space-y-4 bg-white p-4 border rounded max-w-lg">
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="block text-sm">C&oacute;digo</label>
        <input asp-for="Codigo" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Nombre</label>
        <input asp-for="Nombre" class="w-full border rounded p-2" />
    </div>
    <div>
        <label class="block text-sm">Descripci&oacute;n</label>
        <textarea asp-for="Descripcion" rows="2" class="w-full border rounded p-2"></textarea>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm">Costo</label>
            <input asp-for="Costo" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block text-sm">Precio</label>
            <input asp-for="Precio" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
    </div>
    <div class="flex items-center gap-2">
        <input asp-for="EsSubsidiado" type="checkbox" class="border rounded" id="chk-subsidiado" />
        <label for="chk-subsidiado">Es subsidiado</label>
    </div>
    <div class="flex items-center gap-2">
        <input asp-for="LlevaItbis" type="checkbox" class="border rounded" id="chk-itbis" />
        <label for="chk-itbis">Lleva ITBIS</label>
    </div>
    <div>
        <label class="block text-sm">Imagen</label>
        @if (!string.IsNullOrWhiteSpace(Model.ImagenUrl))
        {
            <div class="mb-2">
                <img src="@Model.ImagenUrl" alt="Vista previa de @Model.Nombre" class="w-32 h-32 object-cover rounded border" />
                <label class="flex items-center gap-2 text-sm text-slate-600 mt-2">
                    <input type="checkbox" name="eliminarImagen" value="true" class="border rounded" />
                    Eliminar imagen actual
                </label>
            </div>
        }
        <input type="file" name="imagen" accept="image/*" class="w-full border rounded p-2" />
        <div class="text-xs text-slate-500 mt-1">Formatos: JPG, PNG, GIF o WEBP. M&aacute;ximo 2&nbsp;MB.</div>
        <span class="text-red-600 text-sm">@Html.ValidationMessage("Imagen")</span>
    </div>
    <div class="flex gap-2">
        <button class="px-3 py-2 bg-emerald-600 text-white rounded">Guardar</button>
        <a asp-action="Index" class="px-3 py-2 border rounded">Cancelar</a>
    </div>
</form>
