@model VIP_GATERING.WebUI.Models.ProductosImportVM
@{
    ViewData["Title"] = "Importar productos";
}

<section class="page-card">
    <div class="page-header">
        <div>
            <h1 class="page-title">Importar productos desde Excel</h1>
            <p class="page-subtitle">Formato esperado: Codigo, Nombre, Descripcion, Costo, Precio.</p>
        </div>
    </div>

    <form asp-action="ImportarProductos" method="post" enctype="multipart/form-data" class="space-y-4">
        @Html.AntiForgeryToken()
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="rounded-md border border-rose-200 bg-rose-50 p-3 text-sm text-rose-700"></div>
        }
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="md:col-span-2">
                <label class="form-label">Archivo Excel</label>
                <input class="form-input" type="file" name="Archivo" accept=".xlsx" required />
            </div>
        </div>

        <div class="flex gap-3">
            <button type="submit" class="btn-primary">Importar</button>
            <a asp-action="Index" class="btn-outline">Cancelar</a>
        </div>
    </form>
</section>

@if (Model.TotalFilas > 0 || Model.Errores.Count > 0 || Model.Advertencias.Count > 0)
{
    <section class="page-card mt-6">
        <h2 class="page-title text-lg">Resultado de la importacion</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
            <div class="stat-card">
                <div class="stat-label">Filas procesadas</div>
                <div class="stat-value">@Model.FilasProcesadas / @Model.TotalFilas</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Productos creados</div>
                <div class="stat-value">@Model.ProductosCreados</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Productos actualizados</div>
                <div class="stat-value">@Model.ProductosActualizados</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Productos saltados</div>
                <div class="stat-value">@Model.ProductosSaltados</div>
            </div>
        </div>

        @if (Model.Advertencias.Count > 0)
        {
            <div class="mt-4">
                <h3 class="text-sm font-semibold">Advertencias</h3>
                <ul class="list-disc pl-5 text-sm text-slate-600 mt-2 space-y-1">
                    @foreach (var aviso in Model.Advertencias)
                    {
                        <li>@aviso</li>
                    }
                </ul>
            </div>
        }

        @if (Model.Errores.Count > 0)
        {
            <div class="mt-4">
                <h3 class="text-sm font-semibold text-rose-600">Errores</h3>
                <ul class="list-disc pl-5 text-sm text-rose-600 mt-2 space-y-1">
                    @foreach (var error in Model.Errores)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    </section>
}
