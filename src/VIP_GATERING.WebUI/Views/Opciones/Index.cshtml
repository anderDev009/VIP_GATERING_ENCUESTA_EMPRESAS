@model VIP_GATERING.WebUI.Models.PagedResult<VIP_GATERING.Domain.Entities.Opcion>
@{
    ViewData["Title"] = "Platos";
}
@section Breadcrumb{
    <div class="text-sm text-slate-400 mb-6 tracking-wide uppercase">Inicio / Administracion / Platos</div>
}

<div class="flex justify-between items-center mb-4">
    <div>
        <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Catalogo</p>
        <h1 class="text-3xl font-semibold text-slate-900">Platos disponibles</h1>
        <p class="text-sm text-slate-500">Gestiona los platos del menu manteniendo una imagen consistente.</p>
    </div>
    <a asp-action="Create" class="btn-primary">Nuevo plato</a>
</div>

<form method="get" class="mb-6 grid md:grid-cols-4 gap-4 items-end max-w-4xl">
    <div class="md:col-span-3">
        <label class="text-xs uppercase tracking-widest text-slate-400">Buscar</label>
        <input type="text" name="q" value="@ViewBag.Q" placeholder="Nombre o descripcion" class="mt-2 w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-teal-100" aria-label="Buscar platos" />
    </div>
    <div class="flex gap-3 md:col-span-1">
        <button class="btn-primary flex-1" type="submit">Buscar</button>
        <a asp-action="Index" class="btn-outline flex-1 text-center">Limpiar</a>
    </div>
</form>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border rounded">
        <thead>
            <tr class="text-left text-xs uppercase tracking-widest text-slate-500 bg-slate-100">
                <th class="px-4 py-3">Imagen</th>
                <th class="px-4">Nombre</th>
                <th class="px-4">Descripcion</th>
                <th class="px-4">Costo</th>
                <th class="px-4 text-right">Acciones</th>
            </tr>
        </thead>
        <tbody class="text-sm text-slate-700">
        @foreach (var o in Model.Items)
        {
            <tr class="border-t">
                <td class="p-4 w-32">
                    @if (!string.IsNullOrWhiteSpace(o.ImagenUrl))
                    {
                        <div class="relative rounded-2xl overflow-hidden border border-slate-200 aspect-square max-w-[5.5rem]">
                            <img src="@o.ImagenUrl" alt="Imagen @o.Nombre" class="w-full h-full object-cover" />
                        </div>
                    }
                    else
                    {
                        <span class="inline-flex h-20 w-20 items-center justify-center rounded-2xl border border-dashed border-slate-300 text-[0.65rem] uppercase tracking-wide text-slate-400">Sin imagen</span>
                    }
                </td>
                <td class="p-4">
                    <div class="font-semibold text-slate-900">@o.Nombre</div>
                </td>
                <td class="p-4 text-slate-600">@o.Descripcion</td>
                <td class="p-4">
                    <span class="inline-flex items-center rounded-full bg-slate-900/90 px-4 py-1 text-xs font-semibold text-white">
                        @o.Costo.ToString("C")
                    </span>
                </td>
                <td class="p-4 text-right">
                    <div class="inline-flex gap-2 flex-wrap justify-end">
                        <a asp-action="Edit" asp-route-id="@o.Id" class="btn-outline">Editar</a>
                        <form asp-action="Delete" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@o.Id" />
                            <button class="btn-outline text-rose-500 border-rose-100 hover:border-rose-300">Eliminar</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
